    <style>
      body{
        margin: 25px;
        background-color: rgb(20, 20, 20);
      }
      .neon{
        padding: 20px 20px;
        display: inline-block;
        color: #007780;
        letter-spacing: 2px;
        text-transform: uppercase;
        text-decoration: none;
        font-size: 0.8em;
        overflow: hidden;
        transition: 0.2s ease;
      }
      .neon:hover{
        color:#111;
        background: #14c8ff;
        box-shadow: 0 0 50px #14c8ff;
      }
      .neon:nth-child(1){
        color:#111;
        background: #14c8ff;
        box-shadow: 0 0 50px #14c8ff;
      }
      .neon:nth-last-child(1):hover{
        color:#111;
        background: #ff3714;
        box-shadow: 0 0 50px #ff3714;
      }
      .Navbar-mobile{
        display: none;
      }
      .alert-primary{
        background-color: #14c8ff;
        border:none
      }
      .table{
        color: #fff;
      }
      .col-xs-1{
        width:100%;
      }
      @media only screen and (max-width:768px){
        h3{
          font-size:20px;
        }
        header nav.nav a.nav-link{
          display:none
        }
        .Navbar-mobile{
          display: block;
        }
        hr{
          display: none;
        }
        .hid-on-mobile{
          display: none;
        }
      }
    </style>
    <script src="../images/dashboard/index.js"></script>
  </head>
  <body>
    <header>
      <nav class="nav">
        <a href="javascript:void(0)" class="__top_name nav-link disabled"><jformat>{uemail}</jformat></a>
        <a class="nav-link" href="#">About us</a>
        {{!-- <a class="nav-link" href="#">Community</a> --}}
        <div class="btn-group hid-on-mobile" role="group" aria-label="__community">
          <div class="btn-group" role="group">
            <button id="dropdownId" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                aria-expanded="false">
              Community
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownId">
              <a class="dropdown-item" href="../community_page/">The Community <i class="fa fa-globe" aria-hidden="true"></i></a>
              <a class="dropdown-item" href="../community_new/">Make your own Community <i class="fa fa-exclamation" aria-hidden="true"></i></a>
              <a class="dropdown-item" href="#">Visit global communites <i class="fas fa-globe-asia fa-lg fa-fw"></i></a>
            </div>
          </div>
        </div>
        <a class="nav-link" href="#">Maps</a>
        <a class="nav-link" href="#">Contact us</a>
        <a class="nav-link" onclick="__logoutUser()" href="javascript:void(0)">Logout</a>
